@using Cubit.Data.People
@model IEnumerable<Cubit.Data.Models.PersonModel>

<div id="divPeopleList">

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th class="text-right">Age</th>
                <th class="text-right">Height</th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            
            <tr>
                <td id="name">@Html.DisplayFor(m => item.Name) </td>
                <td id="age" class="text-right" >@Html.DisplayFor(m => item.Age) </td>
                <td id="height" class="text-right">@Html.DisplayFor(m => item.Height) </td>
            </tr>
        }

    </table>
    <div>
        <label>Number of records: @Model.Count().ToString("#,##0")</label>
    </div>
</div>